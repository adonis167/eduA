<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        tools:context=".EditActivity">

        <ImageView
            android:id="@+id/pinchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test00"
            android:splitMotionEvents="true"
            android:clickable="true"/>
        <view
            android:id="@+id/main_imagemap"
            class="kr.co.edu_a.mooil.MyImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.998"
            android:background="#00ffffff"
            android:splitMotionEvents="false"
            android:clickable="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/editButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/pan"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/pan"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/pan"
                    android:onClick="onButtonClickEdit">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/editButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/freedraw">
                </ImageView>
                <ImageView
                    android:id="@+id/editButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/freedraw">
                </ImageView>
            </LinearLayout>
            <ImageView
                android:id="@+id/editButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:background="@drawable/eraser">
            </ImageView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>









