<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle"
        android:layout_margin="0dp">
        <Button
            android:id="@+id/editBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:onClick="onButtonClickEdit"
            android:text="뒤로가기"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        tools:context=".EditActivity">

        <ImageView
            android:id="@+id/pinchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test00"
            android:splitMotionEvents="true"
            android:clickable="true"/>
        <view
            android:id="@+id/main_imagemap"
            class="kr.co.edu_a.mooil.MyImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.998"
            android:background="#00ffffff"
            android:splitMotionEvents="false"
            android:clickable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/editPan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/pan"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editEraser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/eraser"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editClearAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/icon_clear"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/editStroke1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/stroke_1"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editStroke2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/stroke_2"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editStroke3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/stroke_3"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editStroke4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/stroke_4"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/editColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/icon_color"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/orange"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/green"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
                <ImageView
                    android:id="@+id/editRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:background="@drawable/red"
                    android:visibility="gone"
                    android:onClick="onButtonClickEdit">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>









